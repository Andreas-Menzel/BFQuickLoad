{
  "manifest_version": 3,
  "name": "BFQuickLoad",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://app.betaflight.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.betaflight.com/*"],
      "js": ["betaflight_content.js"]
    }
  ],,
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}